<%= form_for account, url: submit_url, method: method, html: { class: 'form account-form' } do |form| %>
  <div class="form-group">
    <%= form.label :title, class: 'control-label' %>
    <%= form.text_field :title, placeholder: 'Account title', class: 'form-control' %>
  </div>

  <% if edit %>
    <div class="form-group">
      <label class="control-label" for="account_currency">Currency</label>
      <p class="form-control-static"><%= account.currency %></p>
    </div>
  <% else %>
    <div class="form-group">
      <%= form.label :currency %>
      <%= form.select :currency, options_for_select(Const::CURRENCY_CODES, account.currency), {}, data: { width: '100%' }, class: 'currency-select' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :description, class: 'control-label' %>
    <%= form.text_area :description, class: 'form-control', placeholder: 'Optional account description' %>
  </div>

  <div class="form-group">
    <%= form.submit submit_caption, class: 'btn btn-default', data: { disable_with: "Processing..." } %>
    <%= link_to 'Cancel', :back, class: 'btn btn-default' %>
  </div>
<% end %>

<script>
  $(function() {
    "use strict";

    $(".account-form .currency-select").select2({
      theme: "bootstrap",
      allowClear: false
    });
  });
</script>

<% if Account.count > 1 %>
  <%= render partial: 'form', locals: {
    form_caption: 'New transfer',
    cancel: false
  } %>

  <% if Transfer.any? %>
    <div class="panel panel-default">
      <div class="panel-heading"><h3 class="panel-title">Recent transfers</h3></div>
      <table class="table table-hover clickable-rows">
        <% @transactions.each do |transaction| %>
          <%= transaction.row %>
        <% end %>
      </table>
    </div>
  <% end %>
<% else %>
  <div class="emptyness">
    At least two accounts required to transfer something to somewhere. <%= link_to 'Add account', new_account_path %>
  </div>
<% end %>

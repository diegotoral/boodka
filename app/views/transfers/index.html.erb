<h2>Transfers</h2>

<%= render 'form' %>

<hr>

<h2>Recent transfers</h2>

<% if Transfer.recent_history.empty? %>
  <p>There are no transfers yet.</p>
<% else %>
  <table class="table table-stripes table-bordered">
    <% Transfer.recent_history.each do |transfer| %>
      <tr>
        <td class="col-lg-2 text-muted"><%= transfer.created_at %></td>
        <td class="col-lg-8 text-right"><span class="text-muted"><%= transfer.description %></span></td>
        <td class="col-lg-2 text-right">
          <%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-default' %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>

<h2>Transfers</h2>

<%= render 'form' %>

<% if Transfer.recent_history.empty? %>
  <div class="emptyness">
    There are no transfers yet.
  </div>
<% else %>
  <h2>Recent transfers</h2>

  <table class="table table-bordered table-hover no-grid">
    <% Transfer.recent_history.each do |transfer| %>
      <tr>
        <td class="col-lg-2 text-muted">
          <%= short_date transfer.created_at %>
        </td>
        <td class="col-lg-10">
          <span class="text-muted">
            <%= "#{transfer.memo}" %>
          </span>
          <div class="table-row-actions">
            <%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-default' %>
          </div>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>

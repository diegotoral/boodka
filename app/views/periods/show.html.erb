<div class="row budget-pagination">
  <div class="col-lg-1 col-md-1 hidden-sm hidden-xs">
    <div class="btn-group">
      <%= @periods.first.link_to_prev_year %>
    </div>
  </div>
  <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 btn-toolbar budget-pagination">
    <div class="btn-group">
      <%= @periods.first.link_to_prev_month %>
      <%= period_pagination(@date) %>
      <%= @periods.first.link_to_next_month %>
    </div>
  </div>
  <div class="col-lg-1 col-md-1 hidden-sm hidden-xs text-right">
    <div class="btn-group">
      <%= @periods.first.link_to_next_year %>
    </div>
  </div>
</div>

<form class="form budget-form">
  <table class="table table-bordered budget-table">
    <tr>
      <th></th>
      <% @periods.each do |period| %>
        <th colspan="3" class="text-center budget-form-heading">
          <%= period.date.strftime('%B %Y') %>
        </th>
      <% end %>
    </tr>
    <tr>
      <th class="col-lg-2 col-md-2 col-sm-2 col-xs-2 budget-form-heading">
        <%= link_to 'Category', categories_path %>
      </th>
      <% @periods.each do |period| %>
        <th class="budget-form-heading text-right">Budgeted</th>
        <th class="budget-form-heading text-right">Outflows</th>
        <th class="budget-form-heading text-right">Balance</th>
      <% end %>
    </tr>
    <% @categories.each_with_index do |category, category_index| %>
      <tr>
        <th class="budget-form-category">
          <%= link_to category.title, edit_category_path(category) %>
        </th>
        <% @periods.each_with_index do |period, period_index| %>
          <td class="form-control-static">
            <input value="<%= period.budget_for(category).display_amount %>" tabindex="<%= period_index * @categories.count + category_index + 1 %>" type="text" class="form-control text-right budget-cell select-on-focus" data-year="<%= period.year %>" data-month="<%= period.month %>" data-cat-id="<%= category.id %>" data-actual=".<%= cell_id('actual', period, category) %>" data-balance=".<%= cell_id('balance', period, category) %>">
          </td>
          <td class="form-control-static">
            <%= period.budget_for(category).actual_cell %>
          </td>
          <td class="form-control-static">
            <%= period.budget_for(category).balance_cell %>
          </td>
        <% end %>
      </tr>
    <% end %>

    <tr>
      <th class="budget-form-category">
        Uncategorized
      </th>
      <% @periods.each_with_index do |period, period_index| %>
        <td colspan="3" class="form-control-static total-value">
          <input value="<%= period.total_uncategorized_expense %>" type="text" class="form-control text-right" readonly>
        </td>
      <% end %>
    </tr>

    <tr>
      <th class="budget-form-category">
        Income
      </th>
      <% @periods.each_with_index do |period, period_index| %>
        <td colspan="3" class="form-control-static total-value">
          <%= period.total_income_cell %>
        </td>
      <% end %>
    </tr>

    <tr>
      <th class="budget-form-category">
        Totals
      </th>
      <% @periods.each_with_index do |period, period_index| %>
        <td class="form-control-static total-value">
          <%= period.total_budgeted_cell %>
        </td>
        <td class="form-control-static total-value">
          <%= period.total_expense_cell %>
        </td>
        <td class="form-control-static total-value">
          <%= period.total_balance_cell %>
        </td>
      <% end %>
    </tr>
</form>

<script>
  $(function() {
    "use strict";

    $(".budget-cell").change(function() {
      var catId = $(this).data("cat-id");

      var cell = $(this);
      var url = Routes.budget_path(cell.data("year"), cell.data("month"),
          cell.data("cat-id"), { amount: cell.val(), format: "json" });

      $.ajax({
        url: url,
        type: "PATCH",
        dataType: "json",
        success: function(data) {
          var budget = data["budget"];
          cell.val(budget["amount"]);
          $(cell.data("actual")).val(budget["actual"]);
          $(cell.data("balance")).val(budget["balance"]);
        }
      });

      Turbolinks.visit(location.href);
    });

    $(".budget-cell").blur();
  })
</script>

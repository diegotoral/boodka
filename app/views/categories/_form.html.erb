<%= form_for @category, html: { class: 'form account-form' } do |form| %>
  <div class="form-group">
    <%= form.label :title, class: 'control-label' %>
    <%= form.text_field :title, placeholder: 'Title', class: 'form-control select-on-focus', autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :memo, class: 'control-label' %>
    <%= form.text_area :memo, class: 'form-control', placeholder: 'Optional notes' %>
  </div>

  <div class="form-group">
    <%= form.submit submit_caption, class: 'btn btn-default', data: { disable_with: "Processing..." } %>
    <% if cancel %>
      <%= link_to 'Cancel', :back, class: 'btn btn-default' %>
    <% end %>
  </div>
<% end %>

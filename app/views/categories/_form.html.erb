<div class="panel panel-default">
  <div class="panel-heading">
    <a href="#" class="close" data-dismiss="modal" aria-label="Close">&times;</a>
    <h3 class="panel-title"><%= form_caption %></h3>
  </div>
  <div class="panel-body">
    <%= form_for @category, format: :js, remote: true, html: { class: 'form account-form' }, builder: SmartBuilder do |form| %>
      <%= form.text :title, placeholder: 'Title', class: 'select-on-focus', autofocus: true %>
      <%= form.area :memo, placeholder: 'Optional notes' %>
      <%= form.popup_submit_group caption: submit_caption %>
    <% end %>
  </div>
</div>

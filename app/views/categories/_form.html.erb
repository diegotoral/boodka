<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= form_caption %></h3>
  </div>
  <div class="panel-body">
    <%= form_for @category, html: { class: 'form account-form' }, builder: SmartBuilder do |form| %>
      <%= form.text :title, placeholder: 'Title', class: 'select-on-focus', autofocus: true %>
      <%= form.area :memo, placeholder: 'Optional notes' %>
      <%= form.submit_group caption: submit_caption, cancel: cancel %>
    <% end %>
  </div>
</div>

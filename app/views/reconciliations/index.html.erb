<% if Account.any? %>
  <h2>New account reconciliation</h2>

  <%= render partial: 'form', locals: {
    reconciliation: @reconciliation,
    submit_url: reconciliations_path,
    method: :post,
    remote: false,
    submit_caption: 'Reconcile',
    edit: false,
    cancel: false
  } %>

  <hr>

  <% if Reconciliation.any? %>
    <h2>Recent reconciliations</h2>

    <table class="table table-bordered table-hover">
      <% Reconciliation.recent_history.each do |rec| %>
        <tr>
          <td class="col-lg-2 text-muted">
            <%= short_date rec.created_at %>
          </td>
          <td class="col-lg-2">
            <%= rec.account.title %>
          </td>
          <td class="col-lg-2 text-right">
            <%= rec.amount.format %>
          </td>
          <td class="col-lg-10">
            <div class="table-row-actions">
              <%= link_to 'Edit', edit_reconciliation_path(rec), class: 'btn btn-xs btn-default' %>
              <%= link_to 'Destroy', rec, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-default' %>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <div class="emptyness">
      There are no reconciliations yet.
    </div>
  <% end %>
<% else %>
  <div class="emptyness text-muted">
    Please create at least one account first.
  </div>
<% end %>

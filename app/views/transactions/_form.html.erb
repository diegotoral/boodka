<%= form_for transaction, url: submit_url, method: method, remote: remote, html: { class: 'form transaction-form' } do |form| %>
  <div class="form-group">
    <%= form.label :account_id, class: 'control-label' %>
    <%= form.select :account_id, options_for_select(Account.all.map { |account| [account.title, account.id] }, transaction.account_id), {}, data: { width: '100%' } %>
  </div>
  <div class="form-group">
    <%= form.label :amount %>
    <%= form.text_field :amount, placeholder: 'Amount', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :currency %>
    <%= form.text_field :currency, placeholder: 'Currency code', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', placeholder: 'Optional description' %>
  </div>
  <div class="form-group">
    <%= form.submit submit_caption, class: 'btn btn-default', data: { disable_with: "Processing..." } %>
    <% if cancel %>
      <%= link_to 'Cancel', :back, class: 'btn btn-default' %>
    <% end %>
  </div>
<% end %>

<script>
  $(function() {
    "use strict";

    $(".transaction-form select").select2({
      theme: "bootstrap",
      allowClear: false,
      minimumResultsForSearch: Infinity
    });
  });
</script>

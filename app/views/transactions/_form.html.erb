<%= form_for transaction, url: submit_url, method: method, remote: remote, html: { class: 'form transaction-form' } do |form| %>
  <div class="form-group">
    <%= form.label :account_id, class: 'control-label' %>
    <%= form.select :account_id, options_for_select(Account.all.map { |account| [account.title, account.id] }, transaction.account_id), {}, data: { width: '100%' }, class: 'account-select' %>
  </div>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.text_field :amount, placeholder: 'Amount', class: 'form-control', autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :currency %>
    <%= form.select :currency, options_for_select(Const::CURRENCY_CODES, transaction.currency), {}, data: { width: '100%' }, class: 'currency-select' %>
  </div>

  <div class="form-group">
    <div class="btn-group btn-group-sm" role="group">
      <a href="#" class="btn btn-sm btn-default currency-switch" data-value="USD">USD</a>
      <a href="#" class="btn btn-sm btn-default currency-switch" data-value="GBP">GBP</a>
      <a href="#" class="btn btn-sm btn-default currency-switch" data-value="EUR">EUR</a>
      <a href="#" class="btn btn-sm btn-default currency-switch" data-value="RUB">RUB</a>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :category_id, class: 'control-label' %>
    <%= form.select :category_id, options_for_select(Category.all.map { |category| [category.title, category.id] }, transaction.category_id), {}, data: { width: '100%' }, class: 'category-select' %>
  </div>

  <div class="form-group">
    <%= form.label :created_at %>
    <%= form.text_field :created_at, value: transaction.created_at.try(:strftime, Const::DATEPICKER_FORMAT_PARSE), class: 'form-control created-at-datepicker', placeholder: 'Timestamp (default is current time)' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', placeholder: 'Optional description' %>
  </div>

  <div class="form-group">
    <%= form.submit submit_caption, class: 'btn btn-default', data: { disable_with: "Processing..." } %>
    <% if cancel %>
      <%= link_to 'Cancel', :back, class: 'btn btn-default' %>
    <% end %>
  </div>
<% end %>

<script>
  $(function() {
    "use strict";

    $(".transaction-form .account-select").select2({
      theme: "bootstrap",
      allowClear: false,
      minimumResultsForSearch: Infinity
    });

    $(".transaction-form .currency-select, .transaction-form .category-select").select2({
      theme: "bootstrap",
      allowClear: false
    });

    $(".currency-switch").click(function() {
      $(".currency-select").val($(this).data("value")).trigger("change")
    });

    $(".created-at-datepicker").datepicker({
      autoclose: true,
      format: "<%= Const::DATEPICKER_FORMAT %>"
    });
  });
</script>
